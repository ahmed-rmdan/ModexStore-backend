generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model product {
  id       String  @id @default(uuid())
  name     String
  type     String
  oldprice Int
  newprice Int
  offer    Boolean @default(false)
  moreinfo String
  mainimg  String
  slideimg String
}

model user{
  id       String  @id @default(uuid())
  name     String
  username String
  password String
  email    String
  telphone String

}
