generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model product {
  id       String  @id @default(uuid())
  name     String
  type     String
  oldprice Int
  newprice Int
  offer    Boolean @default(false)
  moreinfo String
  mainimg  String
  slideimg String
}

model user{
  id       String  @id @default(uuid())
  name     String
  username String
  password String
  email    String
  telphone String
  wishlist  Wishlist[]
  orders    Order[] @relation(name: "userorderrelation")
}
model Wishlist{
 id       String  @id @default(uuid())
 productid String
 userid    String 
 user     user @relation(fields: [userid],references: [id])

}

model Order{
   id       String  @id @default(uuid())
    userid    String 
 user   user @relation(name: "userorderrelation",fields: [userid],references: [id])
   name     String 
  details    String 
  payment    String 
  state      String 
  adress     String 
  totalprice  Int
  locationid   String? @unique
  date        DateTime @default(now())
  location    Location?  @relation(name: "LocationToOrder",fields: [locationid],references: [id])
}
model Location{
   id       String  @id @default(uuid())
   longitude  Float
   latitude   Float
   order      Order?  @relation(name: "LocationToOrder")
 
}